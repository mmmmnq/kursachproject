<Window x:Class="kursovaya.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:kursovaya.ViewModels"
        Title="Авторизация" Height="500" Width="400"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Border Background="Transparent" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            CornerRadius="20"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E" 
                    CornerRadius="20,20,0,0" 
                    Padding="20">
                <TextBlock Text="Авторизация" 
                         FontSize="28" 
                         FontWeight="SemiBold" 
                         Foreground="White" 
                         HorizontalAlignment="Center"/>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Row="1" 
                        Margin="30,0,30,0"
                        VerticalAlignment="Center" Height="306">
                <!-- Username -->
                <TextBlock Text="Логин" 
                         Foreground="#888888"
                         Margin="0,0,0,5"
                         FontWeight="SemiBold"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="40"
                         Background="#333333"
                         Foreground="White"
                         BorderThickness="0"
                         Padding="10,0"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         Margin="0,0,0,20">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Password -->
                <TextBlock Text="Пароль" 
                         Foreground="#888888"
                         Margin="0,0,0,5"
                         FontWeight="SemiBold"/>
                <PasswordBox x:Name="passwordTextBox"
                            Height="40"
                            Background="#333333"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="10,0"
                            FontSize="16"
                            VerticalContentAlignment="Center"
                            PasswordChanged="PasswordBox_PasswordChanged">
                    <PasswordBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <!-- Login Button -->
                <Button Content="Войти"
                        Command="{Binding LoginCommand}"
                        Height="45"
                        Margin="0,30,0,20"
                        Style="{StaticResource AccentButtonStyle}"
                        Background="#007ACC"/>

                <!-- Register Link -->
                <Button Content="Еще нет аккаунта? Создайте" 
                        Click="OpenRegisterForm"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#007ACC"
                        FontWeight="SemiBold"
                        Cursor="Hand" Height="27"/>
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E1E1E" 
                    CornerRadius="0,0,20,20" 
                    Padding="20">
                <Button Content="Закрыть" 
        x:Name="CloseButton"
        Click="CloseButton_Click"
        Width="120" 
        Height="35"
        Style="{StaticResource AccentButtonStyle}"
        Background="#444444"/>
            </Border>
        </Grid>
    </Border>
</Window>