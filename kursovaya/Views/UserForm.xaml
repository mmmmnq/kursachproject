<Window x:Class="kursovaya.Views.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:kursovaya.ViewModels"
        xmlns:helpers="clr-namespace:kursovaya.Helpers"
        Title="Туры" 
        Height="700" 
        Width="1000"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <helpers:StatusToButtonEnabledConverter x:Key="StatusToButtonEnabledConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:TourViewModel />
    </Window.DataContext>

    <Border Background="Transparent" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            CornerRadius="20"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E" 
                    CornerRadius="20,20,0,0" 
                    Padding="20">
                <Grid>
                    <TextBlock Text="Доступные туры" 
                             FontSize="32" 
                             FontWeight="SemiBold" 
                             Foreground="White" 
                             HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="20">
                <ItemsControl ItemsSource="{Binding Tours}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#444444" 
                                    BorderThickness="1" 
                                    CornerRadius="15" 
                                    Margin="0,0,0,20" 
                                    Background="#1E1E1E"
                                    Effect="{StaticResource DropShadowEffect}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Изображение тура -->
                                    <Border Grid.Column="0" 
                                            CornerRadius="15,0,0,15" 
                                            ClipToBounds="True">
                                        <Image Source="{Binding ImagePath}" 
                                               Stretch="UniformToFill" 
                                               Height="200"/>
                                    </Border>

                                    <!-- Информация о туре -->
                                    <Grid Grid.Column="1" Margin="20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Название и статус -->
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="{Binding Name}" 
                                                     FontWeight="Bold" 
                                                     FontSize="24" 
                                                     Foreground="White"/>

                                            <Border Background="#2D2D2D" 
                                                    CornerRadius="20" 
                                                    Padding="15,5" 
                                                    HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Status}" 
                                                         Foreground="Orange"
                                                         FontWeight="SemiBold"/>
                                            </Border>
                                        </Grid>

                                        <!-- Цена -->
                                        <TextBlock Grid.Row="1" 
                                                 Text="{Binding Price, StringFormat='Цена: {0:C}'}" 
                                                 Foreground="#4CAF50"
                                                 FontWeight="Bold"
                                                 FontSize="20"
                                                 Margin="0,10"/>

                                        <!-- Кнопки -->
                                        <StackPanel Grid.Row="2" 
                                                  Orientation="Horizontal" 
                                                  VerticalAlignment="Bottom">
                                            <Button Content="Подробнее" 
                                                    Width="150"
                                                    Height="45"
                                                    Style="{StaticResource DetailsButtonStyle}"
                                                    Margin="0,0,10,0"
                                                    Command="{Binding DataContext.DetailsCommand, 
                                                    RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding}"/>

                                            <Button Content="Забронировать" 
                                                    Width="150"
                                                    Height="45"
                                                    Style="{StaticResource BookButtonStyle}"
                                                    Command="{Binding DataContext.BookCommand, 
                                                    RelativeSource={RelativeSource AncestorType=Window}}" 
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{Binding Status, 
                                                    Converter={StaticResource StatusToButtonEnabledConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E1E1E" 
                    CornerRadius="0,0,20,20" 
                    Padding="20">
                <Button Content="Закрыть" 
        x:Name="CloseButton"
        Click="CloseButton_Click"
        Width="120" 
        Height="35"
        Style="{StaticResource AccentButtonStyle}"
        Background="#444444"/>
            </Border>
        </Grid>
    </Border>
</Window>