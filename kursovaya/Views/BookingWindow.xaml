<Window x:Class="kursovaya.Views.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Бронирование" 
        Height="644" 
        Width="600"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="Transparent" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            CornerRadius="20"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E" 
                    CornerRadius="20,20,0,0" 
                    Padding="20">
                <TextBlock Text="Бронирование тура" 
                         FontSize="32" 
                         FontWeight="SemiBold" 
                         Foreground="White" 
                         HorizontalAlignment="Center"/>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" 
                    Background="#1E1E1E" 
                    Margin="20,10,20,10"
                    CornerRadius="15"
                    Padding="30"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <!-- Email -->
                    <StackPanel Margin="0,0,0,20" Height="76">
                        <TextBlock Text="Email" 
                                 Style="{StaticResource LabelStyle}"
                                 Margin="0,0,0,10"/>
                        <TextBox Text="{Binding Email}" 
                                Style="{StaticResource TextBoxStyle}"
                                Height="45"/>
                    </StackPanel>
                    <Grid Height="28">
                        <TextBlock Text="Стоимость тура" 
                                 Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding TourPrice, StringFormat=\{0:C\}}" 
                                 Style="{StaticResource ValueStyle}"
                                 HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Стоимость тура -->

                    <!-- Стоимость транспорта -->
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="Стоимость транспорта" 
                                 Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding TransportPrice, StringFormat='{}{0:C}'}" 
                                 Style="{StaticResource ValueStyle}"
                                 HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Количество мест -->
                    <StackPanel Margin="0,0,0,20" Height="77">
                        <TextBlock Text="Количество мест" 
                                 Style="{StaticResource LabelStyle}"
                                 Margin="0,0,0,10"/>
                        <TextBox Text="{Binding NumberOfSeats, UpdateSourceTrigger=PropertyChanged}" 
                                Style="{StaticResource TextBoxStyle}"
                                Width="120"
                                Height="45"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                    <Border Background="#2D2D2D" 
                            CornerRadius="10" 
                            Padding="20,15">
                        <Grid>
                            <TextBlock Text="Итоговая цена" 
                                     Style="{StaticResource LabelStyle}"
                                     FontSize="18"/>
                            <TextBlock Text="{Binding TotalPrice, StringFormat=\{0:C\}}" 
                                     Style="{StaticResource PriceStyle}"
                                     FontSize="20"
                                     HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Итоговая цена -->
                </StackPanel>
            </Border>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E1E1E" 
                    CornerRadius="0,0,20,20" 
                    Padding="20">
                <StackPanel>
                <Button Content="Подтвердить бронирование" 
                        Width="300" 
                        Height="45"
                        Style="{StaticResource AccentButtonStyle}"
                        Background="#4CAF50"
                        Command="{Binding ConfirmCommand}"/>
                    <Button Content="Закрыть" 
x:Name="CloseButton"
Click="CloseButton_Click"
Width="120" 
Height="35"
Style="{StaticResource AccentButtonStyle}"
Background="#444444"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>