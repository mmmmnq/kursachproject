<Window x:Class="kursovaya.Views.WriteReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Написать отзыв" 
        Height="500" 
        Width="600"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="Transparent" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            CornerRadius="20"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E" 
                    CornerRadius="20,20,0,0" 
                    Padding="20">
                <TextBlock Text="Написать отзыв" 
                         FontSize="32" 
                         FontWeight="SemiBold" 
                         Foreground="White" 
                         HorizontalAlignment="Center"/>
            </Border>

            <!-- Content -->
            <Border Grid.Row="1" 
                    Background="#1E1E1E" 
                    Margin="20"
                    CornerRadius="15"
                    Padding="20"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <!-- Рейтинг -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Оценка" 
                                 Style="{StaticResource LabelStyle}"
                                 FontSize="16"
                                 Margin="0,0,0,10"/>
                        <ComboBox ItemsSource="{Binding RatingOptions}"
                                SelectedItem="{Binding SelectedRating}"
                                Width="120"
                                Height="40"
                                Background="#2D2D2D"
                                Foreground="White"
                                HorizontalAlignment="Left">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                             Foreground="Black"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>

                    <!-- Комментарий -->
                    <StackPanel>
                        <TextBlock Text="Комментарий" 
                                 Style="{StaticResource LabelStyle}"
                                 FontSize="16"
                                 Margin="0,0,0,10"/>
                        <TextBox Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                Height="200"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                Style="{StaticResource TextBoxStyle}"
                                Background="#2D2D2D"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E1E1E" 
                    CornerRadius="0,0,20,20" 
                    Padding="20">
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center"
                          >
                    <Button Content="Отправить" 
                            Width="150" 
                            Height="45"
                            Style="{StaticResource AccentButtonStyle}"
                            Background="#4CAF50"
                            Command="{Binding SubmitReviewCommand}"/>

                    <Button Content="Отмена" 
                            Width="150" 
                            Height="45"
                            Style="{StaticResource AccentButtonStyle}"
                            Background="#444444"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>