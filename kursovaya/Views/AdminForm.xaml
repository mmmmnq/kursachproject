<Window x:Class="kursovaya.Views.AdminForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель администратора" Height="700" Width="1000" 
        Background="#121212" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="AdminButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#007ACC"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="250"/>
                <Setter Property="Height" Value="80"/>
                <Setter Property="Margin" Value="15"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="15"
                                        Effect="{StaticResource DropShadowEffect}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="{TemplateBinding Content}"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 TextWrapping="Wrap"
                                                 TextAlignment="Center"
                                                 Margin="10,15,10,5"
                                                 FontSize="{TemplateBinding FontSize}"/>
                                        <Border Grid.Row="1" 
                                                Height="3" 
                                                Width="50"
                                                Background="White"
                                                CornerRadius="2"
                                                Margin="0,0,0,10"
                                                Opacity="0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}}" Value="True">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                       To="1" Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                       To="0" Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="15" 
                                                            ShadowDepth="0" 
                                                            Color="#007ACC"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="Transparent" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            CornerRadius="20"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E" 
                    CornerRadius="20,20,0,0" 
                    Padding="20">
                <Grid>
                    <TextBlock Text="Панель администратора" 
                             FontSize="32" 
                             FontWeight="SemiBold" 
                             Foreground="White" 
                             HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="30">
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <Button Content="Управление пользователями" 
                            Command="{Binding ManageUsersCommand}" 
                            Style="{StaticResource AdminButtonStyle}"/>
                    <Button Content="Управление турами" 
                            Command="{Binding ManageToursCommand}" 
                            Style="{StaticResource AdminButtonStyle}"/>
                    <Button Content="Управление транспортом" 
                            Command="{Binding ManageTransportCommand}" 
                            Style="{StaticResource AdminButtonStyle}"/>
                    <Button Content="Управление бронированиями" 
                            Command="{Binding ManageBookingsCommand}" 
                            Style="{StaticResource AdminButtonStyle}"/>
                    <Button Content="Просмотр отчетов" 
                            Command="{Binding ViewReportsCommand}" 
                            Style="{StaticResource AdminButtonStyle}"/>
                    
                    <Button Content="Управление изображениями" 
                            Command="{Binding ManageImagesCommand}" 
                            Style="{StaticResource AdminButtonStyle}"/>
                    <Button Content="Просмотр отзывов" 
                    Command="{Binding ViewReviewCommand}" 
                    Style="{StaticResource AdminButtonStyle}"/>
                    </ItemsControl>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E1E1E" 
                    CornerRadius="0,0,20,20" 
                    Padding="20">
                <Button Content="Закрыть" 
                        Width="200" 
                        Height="50" 
                        Background="#007ACC" 
                        Foreground="White"
                        BorderThickness="0"
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Center" Click="Button_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>