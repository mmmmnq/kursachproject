<Window x:Class="kursovaya.Views.TourDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали тура" 
        Height="900" 
        Width="800"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="Transparent" 
            BorderBrush="#333333" 
            BorderThickness="1" 
            CornerRadius="20"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#1E1E1E" 
                    CornerRadius="20,20,0,0" 
                    Padding="20">
                <Grid>
                    <TextBlock Text="{Binding Name}" 
                             FontSize="32" 
                             FontWeight="SemiBold" 
                             Foreground="White" 
                             HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Margin="20">
                <StackPanel>
                    <!-- Основная информация -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="0,0,0,20"
                            Effect="{StaticResource DropShadowEffect}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Изображение -->
                            <Border Grid.Column="0" 
                                    CornerRadius="10" 
                                    ClipToBounds="True"
                                    Margin="0,0,20,0">
                                <Image Source="{Binding ImagePath}" 
                                       Stretch="UniformToFill"
                                       Height="250"/>
                            </Border>

                            <!-- Детали -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Описание" 
                                             Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Description}" 
                                             Style="{StaticResource ValueStyle}"
                                             TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,0,10">
                                    <TextBlock Text="Даты поездки" 
                                             Style="{StaticResource LabelStyle}"/>
                                    <TextBlock>
                                        <Run Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                             Foreground="White"/>
                                        <Run Text=" - " Foreground="White"/>
                                        <Run Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}" 
                                             Foreground="White"/>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                                    <TextBlock Text="Пункт назначения" 
                                             Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Destination}" 
                                             Style="{StaticResource ValueStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Margin="0,0,0,10">
                                    <TextBlock Text="Свободные места" 
                                             Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding AvailableSeats}" 
                                             Style="{StaticResource ValueStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="4" Margin="0,0,0,10">
                                    <TextBlock Text="Статус" 
                                             Style="{StaticResource LabelStyle}"/>
                                    <Border Background="#2D2D2D" 
                                            CornerRadius="20" 
                                            Padding="15,5"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Status}" 
                                                 Style="{StaticResource StatusStyle}"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="5">
                                    <TextBlock Text="Цена" 
                                             Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" 
                                             Style="{StaticResource PriceStyle}"
                                             FontSize="24"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Отзывы -->
                    <Border Background="#1E1E1E" 
                            CornerRadius="15" 
                            Padding="20"
                            Effect="{StaticResource DropShadowEffect}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                     Text="Отзывы" 
                                     FontSize="24" 
                                     FontWeight="SemiBold" 
                                     Foreground="White" 
                                     Margin="0,0,0,15"/>

                            <ItemsControl Grid.Row="1" 
                                        ItemsSource="{Binding Reviews}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#2D2D2D" 
                                                CornerRadius="10" 
                                                Padding="15"
                                                Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding UserName}" 
                                                             FontWeight="SemiBold" 
                                                             Foreground="White" 
                                                             Margin="0,0,0,5"/>
                                                    <TextBlock Text="{Binding comment}" 
                                                             Foreground="#CCCCCC"
                                                             TextWrapping="Wrap"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" 
                                                          Margin="15,0,0,0">
                                                    <TextBlock Text="{Binding rating, 
                                                             StringFormat='Оценка: {0}'}" 
                                                             Foreground="#FFD700"/>
                                                    <TextBlock Text="{Binding reviewdate, 
                                                             StringFormat='{}{0:dd.MM.yyyy}'}" 
                                                             Foreground="#888888"
                                                             FontSize="12"
                                                             Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#1E1E1E" 
                    CornerRadius="0,0,20,20" 
                    Padding="20">
                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center"
                          >
                    <Button Content="Написать отзыв" 
                            Width="200" 
                            Height="45"
                            Style="{StaticResource AccentButtonStyle}"
                            Background="#4CAF50"
                            Command="{Binding WriteReviewCommand}"/>

                    <Button Content="Закрыть" 
                            Width="200" 
                            Height="45"
                            Style="{StaticResource AccentButtonStyle}"
                            Background="#444444"
                            Click="CloseWindow_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>